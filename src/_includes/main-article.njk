<div class="post featured-post-lg">
    <div class="details clearfix">
        <a href="{{post.url}}" class="category-badge">Popular</a>
        <h2 class="post-title">
            <a href="{{post.url}}">{{post.data.title}}</a>
        </h2>
        <ul class="meta list-inline mb-0">
            <li class="list-inline-item">
                <a href="{{post.url}}">{{post.data.author}}</a>
            </li>
            <li class="list-inline-item">{{post.date | postDate}}</li>
        </ul>
    </div>
    <a href="{{post.url}}">
        <div class="thumb rounded">
            <div class="inner data-bg-image" data-bg-image="{{post.data.image}}">
            </div>
        </div>
    </a>
</div>