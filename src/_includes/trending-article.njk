<div class="post">
    <div class="thumb rounded">
        <a href="#trending" class="category-badge position-absolute">Trending</a>
        <span class="post-format">
            <i class="icon-picture"></i>
        </span>
        <a href="{{post.url}}">
            <div class="inner">
                <img rel="image_src" loading="lazy" src="{{post.data.image}}" alt="{{post.data.imageAlt}}" class="snippet__image">
            </div>
        </a>
    </div>
    <ul class="meta list-inline mt-4 mb-0">
        <li class="list-inline-item">
            <a href="{{post.url}}">
                {{post.data.author}}
            </a>
        </li>
        <li class="list-inline-item">{{post.date | postDate}}</li>
    </ul>
    <h5 class="post-title mb-3 mt-3">
        <a href="{{post.url}}">{{post.data.title}}</a>
    </h5>
    <p class="excerpt mb-0">
        {{post.data.description}}
    </p>
</div>
