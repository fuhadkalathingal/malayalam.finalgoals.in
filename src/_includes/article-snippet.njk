 <!-- post  -->
   <div class="post post-list clearfix">
    <div class="thumb rounded">
        <span class="post-format-sm">
            <i class="icon-picture"></i>
        </span>
        <a rel="canonical" href="{{post.url}}">
            <div class="inner">
              <img rel="image_src" loading="lazy" src="{{post.data.image}}" alt="{{post.data.imageAlt}}" class="snippet__image">
            </div>
        </a>
    </div>
    <div class="details">
        <ul class="meta list-inline mb-3">
            <li class="list-inline-item">
                <a rel="canonical" href="{{post.url}}">
                    {{post.data.author}}
                </a>
            </li>
            <li class="list-inline-item">
                <a href="#latest">Latest</a>
            </li>
            <li class="list-inline-item">{{post.date | postDate}}</li>
        </ul>
        <h5 class="post-tile">
            <a rel="canonical" href="{{post.url}}">
              {{post.data.title}}
            </a>
        </h5>
        <p class="excerpt mb-0">
          {{post.data.description}}
        </p>
        <div class="post-bottom clearfix d-flex align-items-center">
            <div class="social-share me-auto">
                <button class="toggle-button icon-share"></button>
                <ul class="icons list-unstyled list-inline mb-0">
                    <li class="list-inline-item">
                        <a href="https://www.facebook.com/sharer/sharer.php?u=#ur"><i class="fab fa-facebook-f"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://twitter.com/intent/tweet"><i class="fab fa-twitter"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://www.linkedin.com/sharing/share-offsite/?url=https://finalgoals.in"><i class="fab fa-linkedin-in"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="http://pinterest.com/pin/create/link/?url=https://finalgoals.in"><i class="fab fa-pinterest"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://t.me/share/url?url=https://finalgoals.in&text=Visit"><i class="fab fa-telegram-plane"></i></a>
                    </li>
                </ul>
            </div>
            <div class="more-button float-end">
                <a rel="canonical" href="{{post.url}}"><span class="icon-options"></span></a>
            </div>
        </div>
    </div>
</div>